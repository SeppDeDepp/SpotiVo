extends ../_bootstrap

//- Button mixin
mixin button(style, href, size)
	- var style = (typeof style === 'undefined') ? "default" : style
	- var href = (typeof href === 'undefined') ? "#" : href
	case size
		when "large"
			- size = "btn-lg"
		when "small"
			- size = "btn-sm"
		when "mini"
			- size = "btn-xs"

	a( class=["btn", "btn-" + style, size], href=href )
		block

append styles
	// Custom styles for this template
	link(href='/stylesheets/dashboard.css', rel='stylesheet')
block body
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') SpotiVo
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
	.container-fluid
		.row
			.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li.active
						a(href='#')
							| Daemon
							span.sr-only (current)
					li
						a(href='#') Reports
					li
						a(href='#') Settings
			.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				h1.page-header Daemon
				if daemonRunning == 1
					h3 Daemon is Running
					+button("danger", "daemonss", "small") Stop Daemon
				else
					h3 Daemon is not Running
					+button("success", "daemonss", "large") Start Daemon

